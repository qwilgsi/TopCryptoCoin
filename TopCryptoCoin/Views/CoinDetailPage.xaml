<Page x:Class="TopCryptoCoin.Views.CoinDetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:vm="clr-namespace:TopCryptoCoin.ViewModels"
      Background="LightGray">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Name" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" FontSize="16" Margin="0,10"/>
        <TextBox Text="{Binding Coin.Name}" FontSize="24" FontWeight="Bold" Grid.Row="0" Grid.Column="1" Margin="5,10"/>

        <TextBlock Text="Symbol" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" FontSize="16" Margin="0,10"/>
        <TextBox Text="{Binding Coin.Symbol}" FontSize="18" Foreground="Gray" Grid.Row="1" Grid.Column="1" Margin="5,10"/>

        <TextBlock Text="Current price" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" FontSize="16" Margin="0,10"/>
        <TextBox Text="{Binding Coin.CurrentPrice, StringFormat=' {0:C}'}" FontSize="16" Grid.Row="2" Grid.Column="1" Margin="5,10"/>

        <TextBlock Text="Total Volume" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" FontSize="16" Margin="0,10"/>
        <TextBox Text="{Binding Coin.TotalVolume}" FontSize="16" Grid.Row="3" Grid.Column="1" Margin="5,10"/>

        <TextBlock Text="Available on Markets" Grid.Row="4" Grid.Column="0" VerticalAlignment="Top" FontSize="16" Margin="0,10"/>
        <ListBox ItemsSource="{Binding Coin.MarketPlatforms}" MouseDoubleClick="MarketListBox_MouseDoubleClick" Grid.Row="4" Grid.Column="1" Margin="5,10"/>

        <Border Grid.Row="0" Grid.RowSpan="4" Grid.Column="2" Grid.ColumnSpan="2" Margin="20"
                BorderBrush="Black" BorderThickness="1">
            <TextBlock Text="schedule" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16"/>
        </Border>

        <Button x:Name="ThemeButton" Grid.Column="4" Width="20" Height="20"
                HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,1,0,0"/>

        <Button x:Name="LangButton" Grid.Column="4" Width="20" Height="20"
                HorizontalAlignment="Left" VerticalAlignment="Top" Margin="72,1,0,0"/>
    </Grid>
</Page>
