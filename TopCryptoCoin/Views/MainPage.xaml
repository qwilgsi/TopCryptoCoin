<Page x:Class="TopCryptoCoin.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:vm="clr-namespace:TopCryptoCoin.ViewModels"
      Background="LightGray">

	<Grid Margin="20">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="Auto"/>
		</Grid.ColumnDefinitions>

		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<TextBox Grid.Column="0" Grid.Row="0" Height="30"
                 VerticalAlignment="Top"
                 Margin="10,10,5,0"
                 FontSize="16"
				 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                 />

		<Button Grid.Column="0"
                Content="Reset"
                FontSize="14"
                Margin="132,50,5,24"
				Command="{Binding ResetCommand}"
				/>

		<Button Grid.Column="0"
                Content="Search"
                FontSize="14"
                Margin="68,50,68,24"
				Command="{Binding SearchCommand}"/>

		<ListView x:Name="ListViewCoins"
                  Grid.Column="1" Grid.Row="0"
                  Grid.RowSpan="3"
                  Margin="20"
                  VerticalAlignment="Stretch"
                  HorizontalAlignment="Stretch"
				  ItemsSource="{Binding Coins}"
				  SelectedItem="{Binding SelectedCoin}"
				  MouseDoubleClick="ListViewCoins_MouseDoubleClick">
			<ListView.ItemTemplate>
				<DataTemplate>
					<StackPanel Orientation="Horizontal">
						<TextBlock Text="{Binding Name}" FontWeight="Bold" Margin="0,0,5,0"/>
						<TextBlock Text="{Binding Symbol}" Foreground="Gray" Margin="0,0,5,0"/>
						<TextBlock Text="{Binding CurrentPrice, StringFormat='{}{0:C}'}"/>
					</StackPanel>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>

		<Button x:Name="ThemeButton"
                Grid.Column="2" Grid.Row="0"
                Width="20" Height="20"
                Margin="70,10,0,70"
                HorizontalAlignment="Left"/>

		<Button x:Name="LangButton"
                Grid.Column="2" Grid.Row="0"
                Width="20" Height="20"
                Margin="0,10,0,70"
                HorizontalAlignment="Center"/>
	</Grid>
</Page>
